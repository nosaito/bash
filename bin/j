#!/bin/bash -f

#
# NOTE: this command must be launched as ". j".
#
#


declare -A DIR

# DIR["home"]=""

DIR=( \
  ["home"]="C:\\Users\\$USERNAME" \
  ["startup"]="C:\\Users\\${USERNAME}\\AppData\\Roaming\\Microsoft\\Windows\\Start Menu\\Programs\\Startup" \
  ["startup2"]="C:\\ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\Startup" \
  ["win"]="$WINDIR"
)


if [ $# -eq 0 ]; then

  help

else

  if [ ! "${DIR[$1]:-UNDEF}" = "UNDEF" ]; then

    if [ "${2:-UNDEF}" = "p" ]; then
      pushd "${DIR[$1]}"

    elif [ "${2:-UNDEF}" = "o" ]; then
      export a=`cygpath -w ${DIR[$1]}`
      explorer $a

    else
      cd "${DIR[$1]}"

    fi

  else
    echo "not defined parameter: $1"
  fi


fi




#
#
#
help () {
  echo "usage: j <alias> [p] [o] (p: cd by pushd; o:open by explorer)"
  echo "alias list:"
  for i in ${!DIR[@]}; do
    echo "  ${i} => [${DIR[$i]}] "
  done
}
